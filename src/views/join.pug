extends base

block content   
    if(errorMessage)
        span=errorMessage
    form(method="POSt")
        input(name="name", type="text", required, placeholder="name")   
        input(name="email", type="text", required, placeholder="email")  
        input(name="username", type="text", required, placeholder="username")   
        input(name="password1", type="text", required, placeholder="Password")   
        input(name="password2", type="text", required, placeholder="Confirm Password")   
        input(name="location", type="text", required, placeholder="location")   
        input(type="submit", value="Join")

    hr
    div 
        span Already have an account? 
        a(href="/login") Log in now &rarr;